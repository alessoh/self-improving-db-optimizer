database:
  host: localhost
  port: 5432
  user: postgres
  password: CHANGE_ME  # Set your PostgreSQL password
  dbname: query_optimizer_demo
  max_connections: 10

paths:
  data_dir: ./data
  logs_dir: ./data/logs
  policies_dir: ./data/policies
  telemetry_db: ./data/telemetry.db

level0:
  learning_rate: 0.0003
  gamma: 0.99
  batch_size: 64
  buffer_size: 10000

level1:
  enabled: true
  update_interval: 3600

level2:
  enabled: true
  evaluation_interval: 86400

safety:
  enabled: true
  query_timeout: 30
  memory_limit_gb: 2
  rollback_threshold: 0.15

workload:
  queries_per_hour: 1000
  data_scale_factor: 1.0

dashboard:
  enabled: true
  host: 0.0.0.0
  port: 5000

logging:
  level: INFO